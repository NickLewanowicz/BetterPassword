{{#paper-autocomplete
  options=filteredWords
  allowClear=true
  searchText=searchText
  onSearchTextChange=(action (mut searchText))
  selected=selection
  search=(action 'search')
  searchField='word'
  labelPath='word'
  placeholder=placeholder
  noMatchesMessage='Oops this word does not exist.'
  onSelectionChange=onSelectionChange as |word autocomplete|}}
  {{paper-autocomplete-highlight
    label=word.word
    searchText=autocomplete.searchText
    flags='i'}}
{{/paper-autocomplete}}
